{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "noFallthroughCasesInSwitch": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": "src/app/",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    ".tooling/**/*.js",
    ".tooling/**/*.mjs",
    ".tooling/**/*.ts",
    ".tooling/**/*.mts",
    "**/*.js",
    "**/*.mjs",
    "**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
